                            @Html.ExploreEditorFor(model => model.Theme)
                            @Html.ValidationMessageFor(model => model.Theme)
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.ExploreLabelFor(model => model.Type)
                        </div>
                        <div class="col-md-9">
                            @Html.ExploreDropDownListFor(model => model.Type, Model.AvailableBannerTypes)
                            @Html.ValidationMessageFor(model => model.Type)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.ExploreLabelFor(model => model.BannerLink)
                        </div>
                        <div class="col-md-9">
                            @Html.ExploreEditorFor(model => model.BannerLink)
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.ExploreLabelFor(model => model.LinkType)
