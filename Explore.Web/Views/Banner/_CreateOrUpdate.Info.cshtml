                            @Html.ValidationMessageFor(model => model.ShowEndDate)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.ExploreLabelFor(model => model.Status)
                        </div>
                        <div class="col-md-9">
                            @Html.ExploreDropDownListFor(model => model.Status, Model.AvailableBannerStatuses)
                            @Html.ValidationMessageFor(model => model.Status)
                        </div>
                    </div>

                </div>
            </div>
 
        </div>
    </div>
</div>