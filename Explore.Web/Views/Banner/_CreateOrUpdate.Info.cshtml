                            @Html.ExploreLabelFor(model => model.BannerOrder)
                        </div>
                        <div class="col-md-9">
                            @Html.ExploreEditorFor(model => model.BannerOrder)
                            @Html.ValidationMessageFor(model => model.BannerOrder)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.ExploreLabelFor(model => model.ShowBeginDate)
                        </div>
                        <div class="col-md-9">
                            @Html.ExploreEditorFor(model => model.ShowBeginDate, required: true)
                            @Html.ValidationMessageFor(model => model.ShowBeginDate)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.ExploreLabelFor(model => model.ShowEndDate)
                        </div>
                        <div class="col-md-9">
