@using Explore.Web.Framework;

@model Explore.Web.Models.Content.BannerModel


<script type="text/javascript">

</script>

<div class="raw clearfix">
    <div class="col-md-7">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-heading">
                    @T("Admin.Content.Banner.BannerInfo")
                </div>
                <div class="panel-body">

                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.ExploreLabelFor(model => model.PictureModel.PictureId)
                        </div>
                        <div class="col-md-9">
                            @Html.ExploreEditorFor(model => model.PictureModel.PictureId, required: true)
                            @Html.ValidationMessageFor(model => model.PictureModel.PictureId)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.ExploreLabelFor(model => model.Theme)
                        </div>
