@model List<int>

@Html.ListBoxFor(model => model, (IEnumerable<SelectListItem>)ViewData["SelectList"])

<script>
    $(document).ready(function () {
        $('#@ViewData.TemplateInfo.GetFullHtmlFieldId(string.Empty) option:first').prop('selected', 'selected');

        $("#@ViewData.TemplateInfo.GetFullHtmlFieldId(string.Empty)").kendoMultiSelect({
            select: function (e) {
                var current = this.value();

                if (this.dataSource.view()[e.item.index()].value === "-1") {
                    this.value("");
                }
                else if (current.indexOf("-1") !== -1) {
                    current = $.grep(current, function (value) {
                        return value !== "-1";
                    });

                    this.value(current);
                }
            },
            change: function (e) {
                if (this.value().length === 0)
                    this.value(["-1"]);
            }
        }).data("kendoMultiSelect");
    });
</script>